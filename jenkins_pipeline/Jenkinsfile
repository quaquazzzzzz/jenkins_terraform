pipeline {
    agent any

    stages {
        stage('Init') {
            steps {
                sh '/home/linuxbrew/.linuxbrew/bin/terraform init'
            }
        }
        stage('Plan') {
            steps {
                sh '/home/linuxbrew/.linuxbrew/bin/terraform plan'
            }
        }
        stage('Apply') {
            steps {
                script {
                    def userInput = input(
                        id: 'userInput', message: 'Soll die Ã„nderung angewendet werden?', parameters: [
                        booleanParam(name: 'APPLY', defaultValue: false, description: 'Apply Terraform changes?')
                    ])
                    if (userInput == 'true') {
                        sh '/home/linuxbrew/.linuxbrew/bin/terraform apply -auto-approve'
                    }
                }
            }
        }
    }
}

