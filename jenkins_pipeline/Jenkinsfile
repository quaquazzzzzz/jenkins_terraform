pipeline {
    agent any

    stages {
        stage('Init') {
            steps {
                sh 'terraform init'
            }
        }
        stage('Plan') {
            steps {
                sh 'terraform plan'
            }
        }
        stage('Apply') {
            when {
                expression {
                    return params.APPLY
                }
            }
            steps {
                input {
                    message 'Soll die Ã„nderung angewendet werden?'
                    parameters {
                        booleanParam(name: 'APPLY', defaultValue: false, description: 'Apply Terraform changes?')
                    }
                }
                sh 'terraform apply -auto-approve'
            }
        }
    }
}

